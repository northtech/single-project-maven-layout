<configuration scan="true" scanPeriod="30 seconds">
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss} %highlight(%-5level %logger{35} - %msg%n)</pattern>
    </encoder>
  </appender>

  <appender name="rollingfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- Use appname.home if given as -D parameter to Java, otherwise use {user.home}/singleprojectmavenlayout -->
      <fileNamePattern>${appname.home:-${user.home}/singleprojectmavenlayout}/logs/singleprojectmavenlayout.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{HH:mm:ss} %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="async-rollingfile" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="rollingfile"/>
  </appender>

  <logger name="com.tngtech.jgiven" level="WARN"/>

  <root level="DEBUG">
    <appender-ref ref="console"/>
    <!-- <appender-ref ref="async-rollingfile"/> -->
  </root>
</configuration>
